{
    "name": "creativeshop-lambda",
    "version": "1.6.0",
    "description": "Lambda used for creativeshop.",
    "main": "index.js",
    "author": "creativestyle",
    "license": "MIT",
    "engines": {
        "node": ">=10.0.0"
    },
    "scripts": {
        "create-package": "docker run --rm -v \"$PWD\":/var/app mageops/aws-lambda-build nodejs-yarn edge-lambda-deploy-package",
        "precommit": "lint-staged",
        "test": "jest",
        "test-docker": "docker buildx build --pull -f docker/test-node10.Dockerfile ."
    },
    "devDependencies": {
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-plugin-node": "^11.0.0",
        "eslint-plugin-prettier": "^3.1.2",
        "husky": "^4.2.1",
        "jest": "^26.6.3",
        "jest-plugin-must-assert": "^2.0.0",
        "lint-staged": "^10.0.3",
        "nock": "^13.0.4",
        "prettier": "^2.0.4"
    },
    "lint-staged": {
        "*.js": [
            "prettier --trailing-comma es5 --single-quote --write",
            "eslint --fix",
            "git add"
        ]
    },
    "prettier": {
        "trailingComma": "es5",
        "singleQuote": true,
        "tabWidth": 4
    },
    "eslintConfig": {
        "plugins": [
            "node"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:prettier/recommended",
            "plugin:node/recommended"
        ],
        "env": {
            "node": true
        },
        "rules": {
            "no-console": 0,
            "node/no-unpublished-require": 0,
            "node/no-unsupported-features": [
                "error",
                {
                    "version": 10
                }
            ]
        },
        "parserOptions": {
            "ecmaFeatures": {
                "experimentalObjectRestSpread": true
            }
        }
    },
    "jest": {
        "testPathIgnorePatterns": [
            "/node_modules/",
            ".history"
        ],
        "setupFilesAfterEnv": ["jest-plugin-must-assert"]
    },
    "dependencies": {
        "@types/jest": "^25.2.1",
        "got": "^11.8.5",
        "gzip-size": "^5.1.1",
        "imagemin": "^7.0.1",
        "imagemin-gifsicle": "^7.0.0",
        "imagemin-mozjpeg": "^8.0.0",
        "imagemin-pngquant": "^8.0.0",
        "imagemin-webp": "^5.1.0",
        "lodash.capitalize": "^4.2.1",
        "pretty-size": "^2.0.0",
        "terser": "^4.6.11"
    }
}
